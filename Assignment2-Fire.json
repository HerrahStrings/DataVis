{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 600,
  "height": 400,
  "params":[
    {
      "name":"DateSelectionMonth",
      "value": "2019-12",
      "bind": {
        "input": "select", 
        "name": "Month",
        "options": ["2019-12", "2020-01", "2020-02", "2020-03"],
        "labels": ["Dec 19", "Jan 20", "Feb 20", "March 20"]
      }
    },
    {
        "name":"DateSelectionDay",
        "value": 1,
        "bind": {"input": "range", "min": 1,"max": 31,"step": 1, "name": "Day"}
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://herrahstrings.github.io/DataVis/AUS_MAINLAND_SIMPLIFIED.json",
        "format": {"type": "topojson", "feature": "Main"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {"url": "https://herrahstrings.github.io/DataVis/fire_grid.json",
        "format": {"type": "topojson", "feature": "grid"}},
      "mark": {"type": "geoshape"},
      "transform": [
        {"calculate": "toDate(datum.properties.from_date)", "as": "fromDate"},
       {"calculate": "toDate(datum.properties.to_date)", "as": "toDate"},        
        {"filter": "toDate(datum.properties.from_date) <= toDate(DateSelectionMonth + '-' + format(DateSelectionDay, '02d'))"}
	  ],
      "projection": {"type": "equirectangular"},
      "encoding": {
        "stroke": {
          "condition": {"test": "toDate(datum.properties.to_date) >=  toDate(DateSelectionMonth + '-' + format(DateSelectionDay, '02d'))", "value": "red"},
          "value": "black"
        },
        "opacity": {
          "field": "properties.avg_bright",
          "type": "quantitative",
          "title": "Brightness (Kelvin)",
          "scale": {"domain": [240, 360]},
          "legend": {"symbolType": "square"}
        },
        "tooltip": [
          {"field": "fromDate", "type": "temporal", "title": "Earliest Detected"},
          {"field": "toDate", "type": "temporal", "title": "Latest Detected"},
          {"field": "properties.avg_bright", "type": "quantitative", "title": "Brightness (Kelvin)", "format": ".2f"}          
        ]
      }
    }
  ]
}