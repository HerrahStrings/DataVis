{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Australian Climate (2007-2017)",
  "data": {
    "url": "https://herrahstrings.github.io/DataVis/weatherAUS2.csv"
  },
  "params": [
    {
      "name": "Max_MaxTemp_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 45,
        "step": 1,
        "name": "Minimum Highest Temperature: "
      }
    },
    {
      "name": "Measurement_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Lowest Temperature",
          "Highest Temperature",
          "Average Daily Min Temperature",
          "Average Daily Max Temperature"
        ],
        "labels": [
          "Show All",
          "Lowest Temperature",
          "Highest Temperature",
          "Average Daily Min Temperature",
          "Average Daily Max Temperature"
        ],
        "name": "Measurement Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum['Measurement'] != 'Highest Temperature' || datum['Temperature'] > Max_MaxTemp_Above"},
    {
      "filter": "Measurement_selection == null || datum['Measurement'] == Measurement_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Year_Frac",
      "type": "quantitative",
      "title": "Year",
      "axis": {"tickCount": 11},
      "scale": {"type": "linear", "domain": [2007, 2018]}
    },
    "y": {
      "field": "Temperature",
      "type": "quantitative",
      "axis": {"tickCount": 12},
      "scale": {"type": "linear", "domain": [-10, 50]}
    },
    "color": {
      "field": "Measurement",
      "type": "nominal"
    }
  },
  "layer": [
    {
      "selection": {
        "measurement_highlight": {
          "type": "multi",
          "fields": ["Measurement"],
          
          "bind": "legend"
        }
      },
      "mark": "line",
      "encoding": {
        "color": {
          "field": "Measurement",
          "type": "nominal"
        },
        "opacity": {
          "condition": {"selection": "measurement_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Year_Q", "type": "nominal"},
          {"field": "Measurement", "type": "nominal"},
          {"field": "Temperature", "type": "quantitative", "format": ".2f"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Year_Q", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Year_Q'] == '2011.1' && datum['Measurement'] == 'Highest Temperature' ",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Year_Q", "type": "nominal"},
          {"field": "Measurement", "type": "nominal"},
          {"field": "Temperature", "type": "quantitative", "format": ".2f"}
        ]
      }
    }
  ]
}